doctype 5
html
  head
    title exermoney
    link(rel='stylesheet', href='http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css')
    style(type='text/css')
      #content { padding-top: 60px; }
  body
    .topbar-wrapper
      .topbar
        .topbar-inner
          .container
            h3: a(href="/") exermoney
            form(method='post', action='/weight/new')
              ul.nav
                li: a(href="/workout/new") New Workout
                li: a(href='/workouttype/new') New Workout Type
                li: a(href='/goal/new') New Goal
                li: a(href='/unit/new') New Unit
                li: input.xlarge#weight(type='text', name='weight')
                li: input.btn.primary(type='submit', value='Today's Weight')
    #content.container
      block content
