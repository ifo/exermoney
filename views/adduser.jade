extends layout

block content
  form(method='post', action='/user/new')
    fieldset
      legend= title
      .clearfix
        label(for='user') Type
        .input
          input.xlarge#user(type='text', name='user[name]')
      .actions
        input.btn.primary(type='submit', value='Add User')
        |
        a.btn(href='/') Cancel
