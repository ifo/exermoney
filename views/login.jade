extends layout

block content
  form(method='post', action='/session/new')
    fieldset
      legend= title
      .clearfix
        label(for='username') Username
        .input
          input.xlarge#password(type='text', name='username')
      .clearfix
        label(for='password') Password
        .input
          input.xlarge#password(type='password', name='password')
      input(type='hidden', name='redirect', value=redirect)
      .actions
        input.btn.primary(type='submit', value='Login')
