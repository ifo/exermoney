extends layout

block content
  form(method='post', action='/workouttype/new')
    fieldset
      legend= title
      .clearfix
        label(for='workouttype') Workout Type
        .input
          input.xlarge#workouttype(type='text', name='workouttype[name]')
      .clearfix
        label(for='value') Workout Value
        .input
          input.xlarge#value(type='text', name='workouttype[value]')
      .actions
        input.btn.primary(type='submit', value='Add New Workout Type')
        |
        a.btn(href='/') Cancel
