extends layout

block content
  form(method='post', action='/workouttype/new')
    fieldset
      legend= title
      .clearfix
        label(for='workouttype') Type
        .input
          input.xlarge#workouttype(type='text', name='workouttype[name]')
      .clearfix
        label(for='value') Value
        .input
          input.xlarge#value(type='text', name='workouttype[value]')
      .clearfix
        label(for='per') Per
        .input
          input.xlarge#value(type='text', name='workouttype[per]')
      .clearfix
        label(for='unit') Unit
        .input
          select.xlarge#unit(name='workouttype[unit]')
            - each unit in units
              option(value='#{unit.id}')= unit.name
      .actions
        input.btn.primary(type='submit', value='Add New Workout Type')
        |
        a.btn(href='/') Cancel
